{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"inlineSources": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "nodenext",
		"noUncheckedSideEffectImports": true,
		"erasableSyntaxOnly": true
	},
	"include": ["src/**/*.ts"],
	"exclude": []
}
